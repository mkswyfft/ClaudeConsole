<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClaudeConsole"
        xmlns:vm="clr-namespace:ClaudeConsole.ViewModels"
        mc:Ignorable="d"
        Title="ClaudeConsole"
        Height="700" Width="1000"
        Background="#1E1E1E"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing">

    <Window.InputBindings>
        <KeyBinding Key="T" Modifiers="Ctrl" Command="{Binding NewTabCommand}"/>
        <KeyBinding Key="W" Modifiers="Ctrl" Command="{Binding CloseTabCommand}" CommandParameter="{Binding SelectedTab}"/>
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="#2D2D2D" Foreground="White" Padding="2">
            <MenuItem Header="_File">
                <MenuItem Header="_New Tab" Command="{Binding NewTabCommand}" InputGestureText="Ctrl+T"/>
                <MenuItem Header="_Close Tab" Command="{Binding CloseTabCommand}" CommandParameter="{Binding SelectedTab}" InputGestureText="Ctrl+W"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="MenuExit_Click" InputGestureText="Alt+F4"/>
            </MenuItem>
            <MenuItem Header="_Favorites">
                <MenuItem Header="_Manage Favorites..." Click="MenuManageFavorites_Click"/>
                <Separator/>
                <MenuItem Header="(No favorites yet)" IsEnabled="False"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Appearance..." Click="MenuAppearance_Click"/>
                <Separator/>
                <MenuItem Header="_Dark Theme" IsChecked="True" IsCheckable="True" IsEnabled="False"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About ClaudeConsole" Click="MenuAbout_Click"/>
            </MenuItem>
        </Menu>

        <!-- Tab Header Area -->
        <Border Grid.Row="1" Background="#252526">
            <DockPanel>
                <!-- New Tab Button -->
                <Button DockPanel.Dock="Right"
                        Content="+"
                        Command="{Binding NewTabCommand}"
                        Width="30"
                        Height="30"
                        Margin="5"
                        FontSize="16"
                        FontWeight="Bold"
                        ToolTip="New Tab (Ctrl+T)"
                        Style="{StaticResource NewTabButton}"/>

                <!-- Tab Headers -->
                <ListBox x:Name="TabHeaders"
                         ItemsSource="{Binding Tabs}"
                         SelectedItem="{Binding SelectedTab}"
                         SelectedIndex="{Binding SelectedTabIndex}"
                         Background="Transparent"
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                         ScrollViewer.VerticalScrollBarVisibility="Disabled">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border x:Name="TabBorder"
                                    Background="#1E1E1E"
                                    CornerRadius="4,4,0,0"
                                    Margin="2,5,0,0"
                                    Padding="10,5">
                                <DockPanel>
                                    <Button DockPanel.Dock="Right"
                                            Content="Ã—"
                                            Command="{Binding DataContext.CloseTabCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource TabCloseButton}"
                                            Margin="8,0,0,0"
                                            ToolTip="Close Tab (Ctrl+W)"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="8" Height="8" Margin="0,0,6,0">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Fill" Value="#555555"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                                            <Setter Property="Fill" Value="#00FF00"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>
                                        <TextBlock x:Name="TabTitle"
                                                   Text="{Binding Title}"
                                                   Foreground="#888888"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DockPanel>
                            </Border>
                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                    <Setter TargetName="TabBorder" Property="Background" Value="#3D3D3D"/>
                                    <Setter TargetName="TabTitle" Property="Foreground" Value="White"/>
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <ContentPresenter/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </DockPanel>
        </Border>

        <!-- Tab Content Area -->
        <Border Grid.Row="2" Background="#1E1E1E">
            <ContentControl Content="{Binding SelectedTab}">
                <ContentControl.ContentTemplate>
                    <DataTemplate DataType="{x:Type vm:TabViewModel}">
                        <local:TerminalView DataContext="{Binding}"/>
                    </DataTemplate>
                </ContentControl.ContentTemplate>
            </ContentControl>
        </Border>
    </Grid>
</Window>
